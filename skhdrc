# opening applications with shortcut keys
cmd + alt - return : open -a Safari
cmd - return : open -a iTerm
cmd + shift - return : code

# to restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# preventing skhd from monitoring events for listed processes.
 .blacklist [
    "iTerm"
    "terminal"
 ]

# navigation
alt - right : yabai -m window --focus east
alt - left : yabai -m window --focus west
alt - down : yabai -m window --focus south
alt - up : yabai -m window --focus north

# fullscreen
cmd - f         : yabai -m window --toggle zoom-fullscreen
cmd + shift - f : yabai -m window --toggle native-fullscreen

# little switcharoo
cmd + alt - x : yabai -m space --mirror x-axis
cmd + alt - y : yabai -m space --mirror y-axis
