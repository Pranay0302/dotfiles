# opening applications with shortcut keys
cmd + alt - s : open -a Safari
cmd + alt - g : open -a "Google Chrome"
cmd - return : open -a iTerm
cmd + shift - return : code

# to restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# preventing skhd from monitoring events for listed processes.
 .blacklist [
    "iTerm"
    "terminal"
 ]

# navigation
alt - d : yabai -m window --focus east
alt - a : yabai -m window --focus west
alt - s : yabai -m window --focus south
alt - w : yabai -m window --focus north

# fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

# little switcharoo
cmd + alt - x : yabai -m space --mirror x-axis
cmd + alt - y : yabai -m space --mirror y-axis
